<div class="login-box1">
    <img src="/images/logo-lh2.png" class="avatar" alt="Avatar Image">


    <h1>Modificar tu promocion </h1>
    <form action="/admin/Promociones/modificar/{{id}}" method="POST">


        <input type="hidden" name="id" value="{{Promocion.id}}">
        <div class="mb-3">

            <input type="text" class="form-control" placeholder="Titulo" name="titulo" value="{{Promocion.titulo}}">

        </div>

        

        <div class="mb-3">
            <textarea type="text" class="form-control" placeholder="Subtitulo" rows="5"
                name="subtitulo">{{Promocion.subtitulo}}</textarea>


        </div>
        <div class="form-group">
                <label>Imagen <input type="file" name="imagen" id="imagen" /></label>
                   <input type="checkbox" name="img_delete"
                id="img_delete" value="1">Eliminar imagen actual?
                <input type="hidden" name="img_original"
                value="{{Promocion.img_id}}">
           
            </div>

        
                

        <div class="mb-3">
            <textarea type="text" class="form-control" placeholder="cuerpo" rows="5"
                name="cuerpo">{{Promocion.cuerpo}}</textarea>


        </div>





       
            <input type="submit" style="width: 50%;"  value="Modificar">
        


    </form>
    {{#if error}}
    <p>{{message}}</p>
    {{/if }}



</div>